<%= render 'common/about_us' %>
<%= render 'common/q_and_a' %>

<nav class="navbar navbar-fixed-top navbar-default" role="navigation">
	<div class="container-fluid">
		<div class="navar-header">

			<div class="flex-box visible-xs-block">
				<div class="navbar-toggle lines-button x" data-toggle="collapse" data-target="#nav-list">
					<span class="lines"></span>
				</div>
			</div>	


 			<%= link_to root_path, class: "navbar-brand" do %>	
				<%= image_tag("logo4-01.png", class: "brand", alt: "圓滿生機") %>
			<% end %>	

			
			<span class="visible-xs nav-cart">
				<%= link_to carts_path do %>
					<i class="fa fa-shopping-cart gray2"></i>
					<span class="inline-block">  <%= render_cart_items_count(current_cart) %>  </span> 
				<% end %>	
			</span>
		</div>

		<div class="collapse navbar-collapse" id="nav-list">

			<!-- 左nav -->
			<ul class="nav navbar-nav navbar-left center">
				<li>
					<%= link_to "認識圓滿生機", "#", data: {toggle: "modal", target: "#about_us_modal"}  %>
				</li>
				<!-- 下拉分類 -->
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
						商品 / 類別 <span class="caret"></span>
					</a>
					<ul class="dropdown-menu" role="menu">
						<li><%= link_to "所有產品", categories_path, class: "normal-link bold" %></li>
						<% @categories.each do |category| %>
							<li><%= link_to category.name , category_path(category) %></li>
						<% end %>
					</ul>
				</li>
				<!-- 分類end -->
				
				<li class="hidden-sm" ><%= link_to "文章推薦", total_articles_products_path %></li>

				<li><%= link_to "Q＆A", "#", data: {toggle: "modal", target: "#q_and_a_modal"}  %></li>
				<li class="hidden-xs hidden-sm">
					<%= link_to "#" do %>
						<i class="fa fa-facebook-square fa-lg" aria-hidden="true"></i>
					<% end %>
				</li>
			</ul>

			<!-- 右nav -->
			<ul class="nav navbar-nav navbar-right center">
				<li>
					<%= link_to carts_path do %>
						<i class="fa fa-shopping-cart gray2"></i>
						購物車
						<span id="as"> ( <%= render_cart_items_count(current_cart) %> ) </span> 
					<% end %>	
				</li>
				<% if user_signed_in? %>
					<li>
						<%= link_to account_index_path  do %>
							<i class="fa fa-user" aria-hidden="true"></i> 會員中心
						<% end %>	
					</li>
					<li>
						<%= link_to destroy_user_session_path, method: :delete do %>
							<i class="fa fa-sign-out" aria-hidden="true"></i> 登出
						<% end %>	
					</li>
				<% else %>
					<li><%= link_to "會員登入", new_user_session_path %></li>
					<li><%= link_to "註冊", new_user_registration_path  %></li>
				<% end %>	
			</ul>
		</div>
	</div>	
</nav>	