$('#js-load-more').hide();
$('#loading').show();


$.ajax({
	url: 'products',
	beforeSend: function() {
	},
	success: function() {
		$('#loading').hide();
		$('#js-load-more').show();
		$('#products-list').append("<%= j render 'categories/products' %>")
	},
	complete: function() {
		$('#loading').hide();
		$('#js-load-more').show();		
		<% if @products.next_page %>
			$('#js-load-more').replaceWith('<%= j render_ajax_more_button(@products) %>')
		<% else %>	
			$('#js-load-more').remove();
		<% end %>
	}
});



