<%= render "common/error_messages", var: @product %>
<h2>商品編輯</h2>
<%= form_for [:manager, @product] do |f| %>

	<% if @photo.present? %>
		<span>目前商品圖片</span>
		<%= image_tag(@photo.image.thumb.url) %>	
	<% end %>	

	<div class="form-group">
		<%= f.fields_for :photo do |photo_form| %>
			<%= photo_form.label :image, "更換或上傳商品圖片" %>
			<%= photo_form.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
			<%= photo_form.hidden_field :image_cache %>
		<% end %>	
	</div>

	<HR>

	<div class="form-group">
		<%= f.label(:title, "商品名稱 : ") %>
		<%= f.text_field(:title, class: "form-control") %>
	</div>

	<div class="form-group">
		<%= f.label(:quantity, "數量 : ") %>
		<%= f.text_field(:quantity, class: "form-control") %>
	</div>

	<div class="form-group">
		<%= f.label(:price, "價格 : ") %>
		<%= f.text_field(:price, class: "form-control") %>
	</div>

	<div class="form-group">
		<%= f.label(:description,"描述") %>
		<%= f.text_area(:description, class: "form-control") %>
	</div>	

	<%= f.submit "送出", data: { disable_with: "Submitting..." }, class: "btn btn-primary" %>

<% end %>	