<div class="row">
	<div class="col-md-12">
		<h2>訂單明細 (<%= render_order_paid_state(@order) %>)</h2>

		<%= render "manager/orders/state_option", order: @order %>

		<table class="table table-bordered">
      <thead>
        <tr>
          <th>商品明細</th>
          <th>單價</th>
          <th>數量</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.product_name %>
            </td>
            <td>
              <%= order_item.price %>
            </td>
            <td>
              <%= order_item.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
       <span> 總計 <%= render_order_total_amount %> NTD </span>
      </span>
    </div>

     <hr>

     <h2> 寄送資訊 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_name %> - <%= @order_info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>


	</div>
</div>
