      };  
    </script>

		<div><%= f.label  :carousel3_link_p ,"導向頁面" %></div>
		<div><%= f.text_field :carousel3_link_p, class: "form-control" %></div>
		<hr>				


		<%= f.submit "送出", class: "btn btn-normal", data: { disable_with: "上傳並更新設定中..."} %>
	</div>	
<% end %> 