<div class="md row">
  <div class="col-md-12">

    <h2> 訂單明細 </h2>
    
    <%= render 'state_option', order: @order %>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>商品明細</th>
          <th>單價</th>
          <th>數量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>

        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.product_name %>
            </td>
            <td>
              <%= order_item.price %>
            </td>
            <td>
              <%= order_item.quantity %>
            </td>
            <td>
               <span class="small">NTD</span>
              <%= order_sum(order_item.price, order_item.quantity) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="clearfix money-info">
      <div class="pull-right">
        <div class="money-box">
          <span class="money-type">運費</span>
          <span class="colon">:</span>
          <span class="money">$100</span>
        </div>
        <div class="money-box">
          <span class="money-type">商品總價</span>
          <span class="colon">:</span>
          <span class="money">$<%= render_order_total_price(@order_items) %></span>
        </div>  
        <div class="money-box border-top">
          <span class="money-type">本次消費應付金額</span>
          <span class="colon">:</span>
          <span class="money">$<%= render_order_total_amount %></span>
        </div>  
      </div>
    </div>

     <hr>

     <h2> 寄送資訊 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            收件人姓名
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_name %>
          </td>
        </tr>
        <tr>
          <td>
            收件地址
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>

    <% if !@order.is_paid? %>
      <% if @order.aasm_state == "order_cancelled" %>
        <p class="text-center">此訂單已被取消</p>
      <% else %> 

        <div class="pull-right" style="padding: 10px;">
          <%= render "pay_with_credit_card", order: @order %>
        </div>
        <div class="pull-right" style="padding: 10px;">
            <%= link_to("以 ATM 付款", "#", class: "btn btn-lg btn-danger") %>
        </div>
        
      <% end %> 
    <% else %>
      <p class="text-center">此訂單已完成付款</p>
    <% end %>
  </div>
</div>
