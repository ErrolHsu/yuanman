  <table class="table table-striped">
    <thead>
      <tr>
        <th class="high-table p-title">商品明細</th>
        <th class="high-table">單價</th>
        <th class="high-table">數量</th>
        <th class="high-table">小計</th>
        
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td class="high-table p-title">
            <%= order_item.product_name %>
          </td>
          <td class="high-table">
            <%= order_item.price %>
          </td>
          <td class="high-table">
            <%= order_item.quantity %>
          </td>
          <td class="high-table">
             <span class="small">NTD</span>
            <%= order_item_sum(order_item) %>
          </td>          
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="clearfix money-info">
    <div class="pull-right">
      <div class="money-box">
        <span class="money-type">商品總價</span>
        <span class="dollar-sign">$</span>
        <span class="money"><%= render_order_total_price(@order_items) %></span>
      </div>
      <div class="money-box">
        <span class="money-type">運費(郵寄/宅配)</span>
        <span class="dollar-sign">$</span>
        <span class="money">100</span>
      </div>          
      <div class="money-box border-top">
        <span class="money-type">本次消費應付金額</span>
        <span class="dollar-sign">$</span>
        <span class="money"><%= @order.total %></span>
      </div>  
    </div>
  </div>

  <hr>

  <h2> 寄送資訊 </h2>

  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <td class="high-table bold">
          收件人姓名
        </td>
      </tr>
      <tr>
        <td class="high-table">
          <%= @order_info.shipping_name %>
        </td>
      </tr>
      <tr>
        <td class="high-table bold">
          收件地址
        </td>
      </tr>
      <tr>
        <td class="high-table">
          <%= @order_info.shipping_address %>
        </td>
      </tr>      
    </tbody>
  </table>